{{>layout/header}}
    <link href="/css/products.css" rel="stylesheet" />

        <!-- Product section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6"><img class="card-img mb-5 mb-md-0" src="{{product.titleImg}}" alt="..." /></div>
                    <span class="col-md-6">
                        <div class="small mb-1">SKU: BST-498</div>
                        <h1 class="display-5 fw-bolder">{{product.productName}}</h1>
                        <div class="fs-5 mb-5">
                            <!--   <span class="text-decoration-line-through"></span> -->
                            <span>${{product.price}} million</span>
                        </div>
                        <p class="lead">{{product.description}}</p>
                        <span class="d-flex">

                            <span class="invisible" id="product_id">{{product.id}}</span>
                            {{#user}}
                                <span class="invisible" id="user_id">{{user.id}}</span>
                            {{/user}}
                            <input class="form-control text-center me-3" id="product_count" type="num" value="1" style="max-width: 3rem" />
                            <button class="btn btn-outline-dark flex-shrink-0" type="button" id="btn-addCart">
                                <i class="bi-cart-fill me-1"></i>
                                Add to cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

<section>
    <link rel="stylesheet" href="https://allyoucan.cloud/cdn/icofont/1.0.1/icofont.css" integrity="sha384-jbCTJB16Q17718YM9U22iJkhuGbS0Gd2LjaWb4YJEZToOPmnKDjySVa323U+W7Fv" crossorigin="anonymous">
    <div class="container">
        <div class="col-md-12">
            <div class="offer-dedicated-body-left">
                <div class="tab-content" id="pills-tabContent">

                    <div class="tab-pane fade active show" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">
                        <div class="bg-white rounded shadow-sm p-4 mb-4 restaurant-detailed-ratings-and-reviews">
                            <
                            <h5 class="mb-1">All Ratings and Reviews</h5>
                            {{#reviews}}
                            <div class="reviews-members pt-4 pb-4">
                                <div class="media">
                                    <!-- <a href="#"><img alt="Generic placeholder image" src="" class="mr-1 rounded-pill"></a> -->
                                    <div class="media-body">
                                        <div class="reviews-members-header">
                                    <span class="star-rating float-right">
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating active"></i></a>
                                          <a href="#"><i class="icofont-ui-rating"></i></a>
                                          </span>
                                            <h6 class="mb-1"><a class="text-black" href="#">{{title}}</a></h6>
                                            <p class="text-gray">{{createdDate}}</p>
                                        </div>
                                        <div class="reviews-members-body">
                                            <p>{{content}}</p>
                                        </div>
                                        <div class="reviews-members-footer">
                                            <ul class="rating">
                                                <li class="fa fa-star"></li>
                                                <li class="fa fa-star"></li>
                                                <li class="fa fa-star"></li>
                                                <li class="fa fa-star disable"></li>
                                                <li class="fa fa-star disable"></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            {{/reviews}}
                            <a class="text-center w-100 d-block mt-4 font-weight-bold" href="#">See All Reviews</a>
                        </div>
                        <div class="bg-white rounded shadow-sm p-4 mb-5 rating-review-select-page">
                            <h5 class="mb-4">Leave Comment</h5>
                            <p class="mb-2">Rate the Place</p>
                            <div class="mb-4">
                            <span class="star-rating">
                                 <a href="#"><i class="icofont-ui-rating icofont-2x"></i></a>
                                 <a href="#"><i class="icofont-ui-rating icofont-2x"></i></a>
                                 <a href="#"><i class="icofont-ui-rating icofont-2x"></i></a>
                                 <a href="#"><i class="icofont-ui-rating icofont-2x"></i></a>
                                 <a href="#"><i class="icofont-ui-rating icofont-2x"></i></a>
                                 </span>
                            </div>
                            <form>
                                <div class="form-group">
                                    <label>title</label>
                                    <input type="text" class="form-control" id="title">
                                    <label>Your Comment</label>
                                    <textarea class="form-control" id="content"></textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-sm" type="button" id="btn-saveReview"> Submit </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>



        <!-- Related items section-->
        <section class="py-5 bg-light">
            <div class="container px-4 px-lg-5 mt-5">
                <h2 class="fw-bolder mb-4">Related products</h2>

                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <!-- -->
                {{#relatedproducts}}
                    <div class="col-md-4 col-sm-6">
                        <div class="product-grid8" style=" cursor: pointer;" onclick="location.href='/product/{{id}}'">
                            <div class="product-image8">
                                <a href="#">
                                    <img class="pic-1" src="{{titleImg}}">
                                    <img class="pic-2" src="{{titleImg}}">
                                </a>
                                <ul class="social">
                                    <li><a href="" class="fa fa-search"></a></li>
                                    <li><a href="" class="fa fa-shopping-bag"></a></li>
                                    <li><a href="" class="fa fa-shopping-cart"></a></li>
                                </ul>
                                <span class="product-discount-label">-20%</span>
                            </div>
                            <div class="product-content">
                                <div class="price">$ {{price}}
                                    <!-- <span>$ {{price}}</span> -->
                                </div>
                                <ul class="rating">
                                    <li class="fa fa-star"></li>
                                    <li class="fa fa-star"></li>
                                    <li class="fa fa-star"></li>
                                    <li class="fa fa-star disable"></li>
                                    <li class="fa fa-star disable"></li>
                                </ul>
                                <span class="product-shipping">Free Shipping</span>
                                <h3 class="title"><a href="#">{{productName}}</a></h3>
                            </div>
                        </div>
                    </div>
                {{/relatedproducts}}
                </div>
            </div>
        </section>
        
{{>layout/footer}}
